<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="@string/preference_title_tts">
		<ListPreference
			android:key="@string/preference_key_tts_role"
			android:title="@string/preference_title_tts_role"
