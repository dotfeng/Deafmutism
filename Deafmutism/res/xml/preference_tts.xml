			android:defaultValue="@string/preference_default_tts_role"
			android:dialogTitle="@string/preference_dialog_title_tts_role" />
		<net.fengg.app.deafmutism.ui.SeekBarPreference
			android:key="@string/preference_key_tts_speed"
			android:title="@string/preference_title_tts_speed"
			android:defaultValue="@string/preference_default_tts_speed"
			android:dialogTitle="@string/preference_dialog_title_tts_speed" />
		<net.fengg.app.deafmutism.ui.SeekBarPreference
			android:key="@string/preference_key_tts_volume"
