<?xml version="1.0" encoding="utf-8"?>
<!-- litsview的单行布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tv_word_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tv_row_listview_age"
        android:textSize="25sp" />
	<EditText android:id="@+id/et_word_text"
	    android:layout_width="wrap_content" 
	    android:inputType="text"
	    android:visibility="invisible"
	    android:textSize="25sp"
	    android:layout_height="wrap_content">
	</EditText>
    <TextView
        android:id="@+id/tv_row_listview_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_delete"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/tv_row_listview_edit"
        android:textColor="#ffffff"
        android:text="@string/delete"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/tv_row_listview_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_delete"
        android:layout_marginRight="3dp"
        android:text="@string/edit"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</RelativeLayout>